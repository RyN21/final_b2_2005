<h2>Passenger: <%= @passenger.name %></h2>


<%= @passenger.flights.each do |flight| %>
  <%= link_to flight.number, "/flights/#{flight.id}"%>
<% end %>


<h3>Add Flight:</h3>
<%= form_tag "/passengers/#{@passenger.id}" do %>
  <%= label_tag :number %>
  <%= text_field_tag :number %>

  <%= submit_tag "Add Flight" %>
<% end %>
